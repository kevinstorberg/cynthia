<div class="form-container">
  <%= form_tag sessions_path do %>

    <%= text_field_tag :email, nil, placeholder: "E-Mail", class: "form-field" %><br>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "form-field" %><br>
    <%= submit_tag "Log In", id: "submit-form", class: "form-field" %>
    
  <% end %>
</div>
