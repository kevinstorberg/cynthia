<div class="form-container"
  <%= form_for(@user) do |f| %>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-field" %><br>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-field" %><br>
    <%= f.text_field :email, placeholder: "E-Mail", class: "form-field" %><br>
    <%= f.password_field :password, placeholder: "Password", class: "form-field" %><br>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-field" %><br>

    <%= f.submit "Sign Up", id: "submit-form", class: "form-field" %>
  <% end %>
</div>
